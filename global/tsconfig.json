{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,    
    "declarationDir": "types",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "sourceMap": true,
    "baseUrl": "./",
    "noEmitOnError": true,
    "incremental": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}